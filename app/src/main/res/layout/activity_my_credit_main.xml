<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/layout_white_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@mipmap/img_sign_in_credit_bg"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="当前积分："
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_current_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="？"
                        android:textColor="@color/normal_yellow1"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_today_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="11dp"
                    android:text="当日获得积分 ？ 分"
                    android:textColor="@color/light_gray5"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_credit_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/img_my_credit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="积分明细"
                        android:textColor="@color/normal_black1"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_credit_mall"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/icon_credit_mall_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="积分商城"
                        android:textColor="@color/normal_black1"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="61dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_day_task_blue" />

                <include layout="@layout/layout_big_line" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日签到"
                        android:textColor="@color/normal_black"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_sign_in_instroction"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="9dp"
                        android:src="@mipmap/icon_question_mark_blue" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_goto_sign_in"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_sign_in_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="12dp"
                    android:text="奖励 ？ 分"
                    android:textColor="@color/light_gray16"
                    android:textSize="12sp" />

            </LinearLayout>

            <include layout="@layout/layout_small_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课程评价"
                        android:textColor="@color/normal_black"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_course_instroction"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="9dp"
                        android:src="@mipmap/icon_question_mark_blue" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:background="@drawable/bg_blue_dark_btn"
                        android:gravity="center"
                        android:text="？？"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="12dp"
                    android:text="可获得 ？ 分,已获得 ？ 分"
                    android:textColor="@color/light_gray16"
                    android:textSize="12sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="61dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_novice_task_blue" />

                <include layout="@layout/layout_big_line" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_blue_line_blue_solid_small_circle"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@mipmap/icon_novice_blue" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="18dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="完善个人信息"
                            android:textColor="@color/normal_black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_ws_date_credit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:text="奖励？分"
                            android:textColor="@color/orangeone"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_goto_perfect_personal_informmation"
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="7dp"
                            android:gravity="center"
                            android:textColor="@color/orangeone"
                            android:textSize="13sp" />

                    </LinearLayout>
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_blue_line_blue_solid_small_circle"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@mipmap/icon_novice_blue" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="18dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设置角色与兴趣"
                            android:textColor="@color/normal_black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_interest_credit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:text="奖励？分"
                            android:textColor="@color/orangeone"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_goto_receive"
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="7dp"
                            android:gravity="center"
                            android:textColor="@color/normal_gray2"
                            android:textSize="13sp" />

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>