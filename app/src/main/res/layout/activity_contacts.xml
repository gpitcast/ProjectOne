<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/rong_im_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_online_consulting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:paddingTop="15dp">

            <LinearLayout
                android:id="@+id/ll_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_online_consulting"
                    android:layout_width="17dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/icon_group_blue_notice" />

                <TextView
                    android:id="@+id/tv_online_consulting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="在线咨询"
                    android:textColor="@color/orangeone"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_online_consulting_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ll_notice"
                android:layout_alignRight="@+id/ll_notice"
                android:layout_below="@+id/ll_notice"
                android:layout_marginTop="8.5dp"
                android:src="@mipmap/icon_group_blue_line" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:gravity="right">

            <RelativeLayout
                android:id="@+id/rl_community_groups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp">

                <LinearLayout
                    android:id="@+id/ll_files"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_community_groups"
                        android:layout_width="12.5dp"
                        android:layout_height="15.5dp"
                        android:src="@mipmap/icon_group_gray_files" />

                    <TextView
                        android:id="@+id/tv_community_groups"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="社区群组"
                        android:textColor="@color/light_gray16"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_community_groups_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/ll_files"
                    android:layout_alignRight="@+id/ll_files"
                    android:layout_below="@+id/ll_files"
                    android:layout_marginTop="8.5dp"
                    android:src="@mipmap/icon_group_gray_line" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>