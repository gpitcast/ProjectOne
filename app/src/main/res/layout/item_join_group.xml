<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8.5dp"
            android:layout_marginTop="8.5dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="？？？"
                android:textColor="@color/normal_black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="9.5dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/icon_group_address" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="？？"
                    android:textColor="@color/light_gray16"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="9.5dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="17dp"
                    android:src="@mipmap/icon_group_member" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="？？"
                    android:textColor="@color/light_gray16"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_instraction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="？？"
                android:textColor="@color/light_gray16"
                android:textSize="10sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_join_group"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_dark_blue_btn"
            android:gravity="center"
            android:text="？？？"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </LinearLayout>

    <include layout="@layout/layout_small_line" />
</LinearLayout>