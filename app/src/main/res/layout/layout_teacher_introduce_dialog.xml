<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_introduction"
            android:layout_width="260dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40.5dp"
            android:background="@drawable/bg_blue_line_gray_solid"
            android:orientation="vertical" />


        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_blue_circle_line">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="？？"
            android:textColor="@color/orangeone"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_teacher_instroction"
            android:layout_width="220dp"
            android:layout_height="195dp"
            android:layout_below="@+id/tv_teacher_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="？？？"
            android:textColor="@color/normal_black"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_below="@+id/ll_introduction"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@mipmap/img_teacher_introduction_tree" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="70dp"
            android:layout_below="@+id/ll_introduction"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/img_teacher_introduction_cancel" />

        <FrameLayout
            android:id="@+id/fl_cancel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/ll_introduction"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

    </RelativeLayout>
</LinearLayout>