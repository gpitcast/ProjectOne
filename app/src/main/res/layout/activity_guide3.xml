<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray19"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_jump"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:text="跳过"
                    android:textColor="@color/light_gray16"
                    android:textSize="12sp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="你关注的领域是?"
                android:textColor="@color/normal_black"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:gravity="center"
                android:text="教育,我们是认真的"
                android:textColor="@color/light_gray16"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:src="@mipmap/img_rocket" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="180dp"
                android:background="@color/orangeone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="小学"
                android:textColor="@color/normal_black"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="85dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="85dp"
                    android:src="@mipmap/img_square" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="赢在起点"
                    android:textColor="@android:color/white"
                    android:textSize="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="赢在未来"
                    android:textColor="@android:color/white"
                    android:textSize="8dp" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/normal_gray4" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginTop="6dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_blue_half_circle_line"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/light_gray16"
        android:textSize="12sp" />

</LinearLayout>