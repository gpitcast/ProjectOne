<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_base"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15sp"
    android:paddingTop="8.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_file_type"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/img_type_pdf" />

            <ImageView
                android:id="@+id/iv_download_status"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_download_continue"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="2019 春学练优五年级上RJ1-比较基础的单元词汇总汇文件.mp4"
                android:textColor="@color/normal_black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="30MB"
                android:textColor="@color/light_gray16"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/layout_small_line" />

    <include layout="@layout/layout_small_line" />

    <include layout="@layout/layout_small_line" />

</LinearLayout>