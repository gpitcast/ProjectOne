<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_base"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginLeft="2.5dp"
        android:layout_marginRight="2.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/normal_brown"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2.5dp"
            android:background="@drawable/bg_light_brown_rectangle_line"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_money"
                    android:layout_width="13dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/icon_light_brown_future_money" />

                <TextView
                    android:id="@+id/tv_small_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="8.00未来币"
                    android:textColor="@color/light_brown"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_big_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="¥ 8.00"
                android:textColor="@color/light_brown"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>