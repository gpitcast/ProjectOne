<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="93dp">

        <RelativeLayout
            android:id="@+id/rl_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <FrameLayout
                android:id="@+id/fl_bg_outside"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/light_blue10" />

            <LinearLayout
                android:id="@+id/ll_inside"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/light_blue11"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_renmingbi_blue" />

                <TextView
                    android:id="@+id/tv_money_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="¥ 1000.00"
                    android:textColor="@color/normal_blue3"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/ll_jifen_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/icon_jifen_blue" />

                    <TextView
                        android:id="@+id/tv_jifen_give"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="赠送100积分"
                        android:textColor="@color/normal_blue3"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_normal_blue_line_half_circle"
                    android:gravity="center"
                    android:text="立即充值"
                    android:textColor="@color/normal_blue3"
                    android:textSize="13sp" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_recommend_tag"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginLeft="27dp"
            android:background="@drawable/bg_normal_red_half_circle"
            android:gravity="center"
            android:text="推荐"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </RelativeLayout>
</LinearLayout>