<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.feature.projectone.activity.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBottom" />

    <RelativeLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" android:clipChildren="false">

        <ImageView
            android:id="@+id/imgLine"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:src="@mipmap/homeline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="-2dp"
            android:orientation="horizontal"
            android:layout_below="@id/imgLine"
            >

            <LinearLayout
                android:id="@+id/llHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@mipmap/tabbarbg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="4dp">

                <ImageView
                    android:id="@+id/imgHome"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_above="@id/tvHome"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/home_2" />

                <TextView
                    android:id="@+id/tvHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:text="首页"
                    android:textColor="#B6B6CD"
                    android:textSize="11sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="4dp">

                <ImageView
                    android:id="@+id/imgOrder"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_above="@id/tvOrder"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/clipboardwtick_1" />

                <TextView
                    android:id="@+id/tvOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:text="订单"
                    android:textColor="#B6B6CD"

                    android:textSize="11sp" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/llCart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:paddingBottom="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgCart"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_above="@id/tvCart"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/cartbig" />

                <TextView
                    android:id="@+id/tvCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:text="购物车"
                    android:textColor="#B6B6CD"
                    android:textSize="11sp" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/llMsg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="4dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgMsg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_above="@id/tvMsg"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/bubble_1" />

                <TextView
                    android:id="@+id/tvMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:text="消息"
                    android:textColor="#B6B6CD"
                    android:textSize="11sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/llMine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgMine"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_above="@id/tvMine"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:src="@mipmap/male_1" />

                <TextView
                    android:id="@+id/tvMine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="9dp"
                    android:text="我的"
                    android:textColor="#B6B6CD"
                    android:textSize="11sp" />


            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
