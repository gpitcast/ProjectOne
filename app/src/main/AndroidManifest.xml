<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.feature.projectone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 登陆与注册界面界面 -->
        <activity
            android:name=".activity.LoginAndRegistActivity"
            android:launchMode="singleTask">

        </activity>

        <!-- 注册协议界面 -->
        <activity android:name=".activity.RegistAgreementActivty" />

        <!-- 忘记密码界面 -->
        <activity android:name=".activity.ForgetPswActivity" />

        <!-- 首页界面 -->
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 新闻资讯首页界面 -->
        <activity android:name=".activity.NewsHeadlinesMainActivity" >

        </activity>

        <!-- 新闻资讯详情界面 -->
        <activity android:name=".activity.NewsHeadlinesDetailsActivity" />

        <!-- 资源下载界面 -->
        <activity android:name=".activity.SourceDownloadActivity"/>


    </application>

    <!-- 允许程序访问有关GSM网络信息权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>